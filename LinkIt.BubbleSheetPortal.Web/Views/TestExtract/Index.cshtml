<script type="text/javascript">

    $(function () {
        if ($('#radioUser:checked').val() == 'on') {
            ChooseUserType();
        }
        else if ($('#radioRoster:checked').val() == 'on') {
            ChooseRosterType();
        }
        else if ($('#radioTest:checked').val() == 'on') {
