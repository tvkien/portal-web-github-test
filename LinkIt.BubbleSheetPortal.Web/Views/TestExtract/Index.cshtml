    }

    function ChooseRosterType() {
        loadReportForm('@Url.Action("LoadRosterFilter")', $('#divRosterFilter'));
        clearForm($('#divTestResultFilter'));
        clearForm($('#divUserFilter'));
        clearForm($('#divTestFilter'));
        clearForm($('#divTestAssignmentFilter'));

