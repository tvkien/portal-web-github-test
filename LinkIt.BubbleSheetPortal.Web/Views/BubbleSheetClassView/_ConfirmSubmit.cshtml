<modal-component
    v-bind:show.sync="isShowConfirmSubmit"
    v-bind:width="550"
    style="display: none;">
    <div slot="close">
        <a href="#" v-on:click.prevent="closeConfirmSubmit" class="modal-component-close">Close</a>
    </div>
    <div slot="header"></div>
    <div slot="body">
        <span v-if="notReviewedStudentCount > 0">There are <b v-text="notReviewedStudentCount"></b> number of students that have not been reviewed.</span>        
        Select <b>OK</b> to submit your modified bubble sheets. They will be locked until processing has been completed.
        Otherwise, select <b>Cancel</b> to keep reviewing for remaining students.
    </div>
    <div slot="footer">
        <div class="u-text-right">
            <button v-on:click="submitClassView">OK</button>
            <button v-on:click="closeConfirmSubmit">Cancel</button>
        </div>
    </div>
</modal-component>
