    @LinkIt.BubbleSheetPortal.Web.Helpers.BundleHelper.StyleReportPrintingMultipleStudentsBundle()
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <style>
        .col_StudentInfo {
            float: right;
            margin-top: 28px;
        }

            .col_StudentInfo table {
                width: 260px !important;
            }

        .col_StudentHistory {
            float: left;
        }

            .col_StudentHistory table {
                width: 400px !important;
                margin-bottom: 1.667em;
            }

        .col_StudentHistory_Selected {
            background-color: #cccccc;
        }

        .boxtitle {
            background-color: #071E45;
            display: inline-block;
            padding: 5px 15px;
            color: white;
        }
        /*.table {page-break-inside: avoid;}*/
        .table tbody td,
        .table tbody tr:nth-child(even) td,
        .table thead th, .table thead td, .head {
            background-color: white;
            background-image: none;
        }

        .table thead th, .table thead td, .head {
            color: black;
            text-shadow: none;
        }

        .question-detail-answer {
            background: gainsboro !important;
        }

        .table thead th, .table tbody td {
            border-left: 1px solid #999999 !important;
            border-right: 1px solid #999999 !important;
            /*line-height: 4px;*/
            padding-top: 0px !important;
            padding-bottom: 0px !important;
            margin: 0px;
        }

        .big_line tbody td {
            line-height: 15px;
        }

        .block-content {
            border: 0px solid #999999;
            -moz-border-radius: 0px;
            -webkit-border-radius: 0px;
            -webkit-background-clip: padding-box;
            border-radius: 0px;
            padding: 1.667em;
            background: white;
            -moz-box-shadow: none;
            -webkit-box-shadow: none;
            box-shadow: none;
            position: relative;
        }

        .qa thead th, .qa tbody td {
            vertical-align: middle;
            text-align: center;
            padding: 0.5em 0 0.5em 0;
        }

        .missingAnswer {
            width: auto !important;
        }

        .utility-table {
            width: 920px !important;
        }

        .detail-summary {
            width: 100%;
            font-size: 20px;
            color: white;
            font-weight: bold;
            padding-bottom: 5px;
            padding-top: 5px;
            padding-right: 10px;
            background: CornflowerBlue;
            text-align: right;
        }
    </style>
    <style type="text/css" media="screen,print">
        .page-breaker {
            display: block;
            page-break-after: always;
            border: 0px solid red;
        }
    </style>
</head>
<body>

    @foreach (var actReportMasterViewModel in Model.ListACTReportMasterViewModel)
    {
        Html.RenderPartial("_SingleStudentReport", actReportMasterViewModel);
    }
</body>



</html>
