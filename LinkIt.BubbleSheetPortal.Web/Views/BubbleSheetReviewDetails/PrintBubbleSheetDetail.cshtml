@using LinkIt.BubbleSheetPortal.Web.ViewModels
@model BubbleSheetFileSubListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <title>Print Test Detail</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <script src="@Url.Content("~/Content/themes/Constellation/js/html5.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/date.js")" type="text/javascript"></script>
        <style type="text/css">
            @@media print {
                thead {
                    display: table-header-group;
                }

                table {
                    page-break-inside: auto;
                }

                tr {
                    page-break-inside: avoid;
                    page-break-after: auto;
                    height: 40px;
                    overflow: hidden;
                }

                td {
                    page-break-inside: avoid;
                    page-break-after: auto;
                }

                .tablePrint {
                    border-left: 1px solid #000;
                    border-top: 1px solid #000;
                }

                .tablePrint th {
                    border-bottom: 1px solid #000;
                    border-right: 1px solid #000;
                    padding: 5px;
                }

                .tablePrint td {
                    border-bottom: 1px solid #000;
                    border-right: 1px solid #000;
                    padding: 5px;
                    padding-bottom: 0px;
                }
            }
        </style>
    </head>
@**@
<body onload="window.print(); window.onfocus = function() { window.close(); };">
    @if (Model != null && Model.ListFileSubViewModels.Count > 0)
    {
        foreach (var item in Model.ListFileSubViewModels)
        {
            <img src="@item.ImageUrl" />
        }
    }
</body>
</html>
