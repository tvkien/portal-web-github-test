@using System.Linq
@using DevExpress.Web.ASPxHtmlEditor.Internal
@model LinkIt.BubbleSheetPortal.Web.ViewModels.SATReport.SATReportMasterViewModel
           
@if (Model.NewSATEssayComments.Any())
{
    <div class="page-breaker"></div>
    <div style="font-size: 14px;">
        <div>
            @Html.Raw(Model.EssayCommentTitle)
        </div>    

        <br />
        <br />
        
        @foreach (var essayComment in Model.NewSATEssayComments)
        {
            <div>
                <span style="font-weight: bold; font-size: 18px;">@essayComment.TagName: @essayComment.Score</span>
                <br/>
                @essayComment.ScoreRange
            </div>
            <div>
                @Html.Raw(essayComment.EssayComment)
            </div>
            <br/>
        }
    </div>
    <br/>
}

