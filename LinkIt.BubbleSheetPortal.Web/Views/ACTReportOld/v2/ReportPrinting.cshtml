@model LinkIt.BubbleSheetPortal.Web.ViewModels.ACTReport.ACTReportMasterViewModel
@using LinkIt.BubbleSheetPortal.Common.Enum
@using LinkIt.BubbleSheetPortal.Web.Helpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html style="background: white !important;">
<head>
    <title></title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <script src="@Url.Content("~/Content/themes/Constellation/js/html5.js")" type="text/javascript"></script>
    @*@MvcHtmlString.Create(
        Bundle.Css()
            .Add(@Url.Content("~/Content/themes/Constellation/css/reset.css"))
            .Add(@Url.Content("~/Content/themes/Constellation/css/common.css"))
            .Add(@Url.Content("~/Content/themes/Constellation/css/custom.css"))
            .Add(@Url.Content("~/Content/themes/Constellation/css/standard.css"))
            .Add(@Url.Content("~/Content/themes/Constellation/css/special-pages.css"))
            .Add(@Url.Content("~/Content/themes/Constellation/css/table.css"))
            .Add(@Url.Content("~/Content/css/prettyPhoto.css"))
            .Add(@Url.Content("~/Content/css/utilitySearch.css"))
            .Render("/Content/themes/Constellation/css/combined_#.css")
        )*@

    @LinkIt.BubbleSheetPortal.Web.Helpers.BundleHelper.StyleACTReportReportPrintingBundle()

    <script src="@Url.Content("~/FeLibs/jquery/jquery.min.js")" type="text/javascript"></script>
    <style>
            .col_StudentInfo {
                float: right;
                margin-top: 28px;
            }

            .col_StudentInfo table {
                width: 260px !important;
            }

            .col_StudentHistory {
                float: left;
            }

            .col_StudentHistory table {
                width: 400px !important;
                margin-bottom: 1.667em;
            }

            .col_StudentHistory_Selected {
                background-color: var(--borderColor);
            }

            .boxtitle {
                background-color: #071E45;
                display: inline-block;
                padding: 5px 15px;
                color: white;
            }
            /*.table {page-break-inside: avoid;}*/
            .table tbody td,
            .table tbody tr:nth-child(even) td,
            .table thead th, .table thead td, .head {
                background-color: white;
                background-image: none;
            }

            .table thead th, .table thead td, .head {
                color: black;
                text-shadow: none;
            }

            .question-detail-answer td {
                background: gainsboro !important;
            }

            .table thead th, .table tbody td {
                border-left: 1px solid var(--grey7) !important;
                border-right: 1px solid var(--grey7) !important;
                /*line-height: 4px;*/
                padding-top: 0px !important;
                padding-bottom: 0px !important;
                margin: 0px;
            }

            .big_line tbody td {
                line-height: 15px;
            }

            .block-content {
                border: 0px solid var(--grey7);
                /*padding: 1.667em;*/
                padding: 0 !important;
                background: white;
                box-shadow: none;
                position: relative;
            }
            .qa thead th, .qa tbody td {
                vertical-align: middle;
                text-align: center;
                padding: 0.5em 0 0.5em 0;
                }
            .missingAnswer {
                width: auto !important;
            }
            .utility-table {
                width: 920px !important;
                }

            @if (Model.VirtualTestSubTypeId == (int) VirtualTestSubType.NewACT)
            {
                <text>
                    .table {
                        margin-bottom: 10px !important;
                    }
                </text>
            }
            else
            {
                <text>
                    .table {
                        margin-bottom: 15px !important;
                    }
                </text>
            }

        </style>
        <style type="text/css" media="screen,print">
            .page-breaker {
                display: block;
                page-break-after: always;
                border: 0px solid var(--red);
            }
        </style>
    </head>
<body>

        @Html.Partial("_SingleStudentReport", Model)
</body>



</html>
