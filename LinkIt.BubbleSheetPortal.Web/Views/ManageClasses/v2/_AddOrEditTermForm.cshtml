@model LinkIt.BubbleSheetPortal.Web.ViewModels.AddEditTermViewModel
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.upgraded.js")" type="text/javascript"></script>
<style>
    .btn-container {
        display: flex;
        gap: 18px;
        justify-content: flex-end;
    }

    fieldset {
        padding: 0 !important;
        margin-bottom: 24px !important;
    }

    .title-large {
        margin-bottom: 24px;
    }

    .ui-state-hover {
        background-color: unset !important;
    }
</style>
<fieldset>
    <p class="title-large">@LabelHelper.Term Detail</p>
    @Html.HiddenFor(m => m.TermID, new { @id = "hdTermId" })
    @Html.HiddenFor(m => m.DistrictID, new { @id = "hdDistrictId" })
    <div>
        <label>
            Name
        </label>
        @Html.TextBoxFor(m => m.Name, new { @id = "txtTermName", @class = "full-width", maxlength = 99 })
    </div>
    <div class="mt-3">
        <label>
            Start Date
        </label>
        @Html.TextBoxFor(m => m.DateStart, new { @id = "txtTermDateStart", @class = "datepicker full-width" })
    </div>
    <div class="mt-3">
        <label>
            End Date
        </label>
        @Html.TextBoxFor(m => m.DateEnd, new { @id = "txtTermDateEnd", @class = "datepicker full-width" })
    </div>
</fieldset>
<div class="btn-container ">
    <button id="btnCancel" type="button" class="grey btn-blue">
        Back
    </button>
    <button id="btnSubmit" type="submit" name="Save" class="btn-red">
        Submit
    </button>
</div>

<script type="text/javascript">
    function ResetFields() {
        $('#txtTermName').val('');
        $('#txtTermDateStart').val('');
        $('#txtTermDateEnd').val('');
    }
    $(document).on('ready', function() {
        var idEdit = $('#hdTermId').attr('value');
        if(idEdit === '0') {
            $('#btnCancel').text('Cancel');
        }
    })

    $(function () {
        $(".datepicker").datepicker();
    });
</script>
