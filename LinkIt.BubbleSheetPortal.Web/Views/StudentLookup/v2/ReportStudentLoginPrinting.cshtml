@using LinkIt.BubbleSheetPortal.Web.ViewModels
@model PrintStudentLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        h2 {
            text-align: center;
        }
    </style>
</head>
<body>

    <h2>Student List</h2>

    <table>
        <thead>
            <tr>
                <th>Student Fullname</th>
                <th>Local ID</th>
                <th>School</th>
                <th>Class(es)</th>
                <th>@LabelHelper.StudentGrade</th>
                <th>Username</th>
                <th>Passcode</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.FullName</td>
                    <td>@student.Code</td>
                    <td>@student.SchoolName</td>
                    <td>@student.Classes</td>
                    <td>@student.GradeName</td>
                    <td>@student.UserName</td>
                    <td>@student.SharedSecret</td>
                    <td>@student.Email</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
