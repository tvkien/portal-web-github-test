    function checkScoreIncludedInSumAvg() {
        var model = @Html.Raw(Json.Encode(Model));
        var scoreType = model.ScoreType;
        var canDelete = true;

        if(model.SubscoreId > 0) {
            //Check Overall
            for (var i = 0; i < overallCalculateDetail.length; i++) {
                var overallCalculateDetailItem = overallCalculateDetail[i];
                for(var k = 0; k < overallCalculateDetailItem.overViewArray.length; k++) {
                    var overViewArrayItem = overallCalculateDetailItem.overViewArray[k];
                    if(overViewArrayItem.parentType.split('_')[1] == model.SubscoreId) {
                        for( var j = 0; j < overViewArrayItem.includedColumns.length; j++) {
                            var item = overViewArrayItem.includedColumns[j];
                            if (scoreType == item) {
                                canDelete = false;
                                break;
                            }
                        }
                    }
                }
            }

            //Check Current
            for (var i = 0; i < subScoreCalculateDetail_@(Model.SubscoreId).length; i++) {
                var calculateDetailItem = subScoreCalculateDetail_@(Model.SubscoreId)[i];
                for( var j = 0; j < calculateDetailItem.overViewArray[0].includedColumns.length; j++) {
                    var item = calculateDetailItem.overViewArray[0].includedColumns[j];
                    if (scoreType == item) {
                        canDelete = false;
                        break;
                    }
                }
            }
        } else {
            for (var i = 0; i < overallCalculateDetail.length; i++) {
                var overallCalculateDetailItem = overallCalculateDetail[i];
                for( var j = 0; j < overallCalculateDetailItem.overViewArray[0].includedColumns.length; j++) {
                    var item = overallCalculateDetailItem.overViewArray[0].includedColumns[j];
                    if (scoreType == item) {
                        canDelete = false;
                        break;
                    }
                }
            }
        }

        return canDelete;
    }

    function resetTagEditor(id) {
        var tags = $(id).tagEditor('getTags')[0].tags || [];
        for (var i = 0; i < tags.length; i++) {
            $(id).tagEditor('removeTag', tags[i]);
        }
    }

    function formatDecimal(item) {
        var result = parseFloat(item);
        var numberOfDecimalPoint = parseInt($('#NumberOfDecimalPoint').val());
        result = roundN(result, numberOfDecimalPoint)
        return result;
    }

    function roundN(num,n){
        return parseFloat(Math.round(num * Math.pow(10, n)) /Math.pow(10,n)).toFixed(n);
    }

    function updateDecimalListText() {
        var tags = $('#singleFieldTags').tagEditor('getTags')[0].tags;
        for (var i = 0; i < tags.length; i++) {
            $('#singleFieldTags').tagEditor('removeTag', tags[i]);
        }
        $('#divsingleFieldTags ul').html('');
        for (var i = 0; i < tags.length; i++) {
            var item = formatDecimal(tags[i]);
            $('#singleFieldTags').tagEditor('addTag', item);
        }
    }

    function updateDecimalListLabelValue() {
        for (var i = 0; i < DefineTemplateModel.listLabelValue.length; i++) {
            if (DefineTemplateModel.listLabelValue[i].Option != "") {
                DefineTemplateModel.listLabelValue[i].Option = formatDecimal(DefineTemplateModel.listLabelValue[i].Option);
            }
        }
    }

    function findDuplicateInArray(arra1) {
        var object = {};
        var result = [];

        arra1.forEach(function (item) {
          if(!object[item])
              object[item] = 0;
            object[item] += 1;
        })

        for (var prop in object) {
           if(object[prop] >= 2) {
               result.push(prop);
           }
        }
        return result;
    }

