@using LinkIt.BubbleSheetPortal.Web.Helpers
@model int

@{
    string urlParam = null;
    var currentUser = HttpContext.Current.GetCurrentUser();
    if (currentUser != null && currentUser.IsNetworkAdmin)
    {
        urlParam = "&districtId=" + Model;
    }

    <script>
        function generateDistrictIdParamsFromURL() {
            return '@Html.Raw(urlParam == null ? "" : urlParam)';
        }

        function getDistrictIdFromURL() {
            return @Html.Raw(urlParam == null ? "null" : Model.ToString());
        }
    </script>
}
