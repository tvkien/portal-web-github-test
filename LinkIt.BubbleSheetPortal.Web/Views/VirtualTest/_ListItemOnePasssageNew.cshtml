                        //refresh qtitem
                        $('#tips').html('');

                        //$('.ui-widget-overlay').remove();
                        //remove the last only
                        $('.ui-widget-overlay').last().remove();
                        $('#SelectSectionDialog').parent('.ui-dialog').empty();
                        $('#SelectSectionDialog').remove();
