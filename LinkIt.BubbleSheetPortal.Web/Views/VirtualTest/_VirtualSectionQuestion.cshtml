            var self = this;
            self.data = ko.observableArray(inputData);
            self.vmdata = ko.observableArray([]);
            self.selectedQuestion = ko.observable('');

            var newTempGroup = function (groupID, isHeader, sectionID, isEmtySection, isLastGroup) {
