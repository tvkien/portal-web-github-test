@{
    Layout = null;
}

@model LinkIt.BubbleSheetPortal.Web.ViewModels.TDLS.TDLSProfileViewModel
<!DOCTYPE html>
<html >
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Print TLDS</title>
    <link href="/Content/themes/Print/TLDSPrint/TLDSPrint.css" rel="stylesheet"/>
</head>
<body>
    <div class="tlds-print">
        <h1 class="tlds-print-title u-text-uppercase">Transition learning and development statement</h1>
        @Html.Partial("_SectionPrint0", Model)
        @Html.Partial("_SectionPrint1", Model)
        @if (Model.TLDSFormSectionExport.Count > 0)
        {
            foreach (var item in Model.TLDSFormSectionExport)
            {
                if (item.TLDSFormSection2 != null)
                {
                    @Html.Partial("_OnlineFormSectionPrint2", item.TLDSFormSection2)
                }
                if (item.TLDSFormSection3 != null)
                {
                    @Html.Partial("_OnlineFormSectionPrint3", item.TLDSFormSection3)
                }
            }
        }
        @Html.Partial("_PDFUpload", Model)
        @Html.Partial("_SectionPrint4", Model)
    </div>
</body>
</html>
