<script type="text/javascript">
    var anOpen = [];
    var oTable;

    $(function () {
        InitDataTable();

        if ('@ViewBag.ReplyMessageResult' == 'True') {
            if ('@ViewBag.ReplyMessageType' == '2')
                LinkIt.success('#messageNotification', 'Reply message successfully.');
            else
