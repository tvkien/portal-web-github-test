<modal-component v-bind:show.sync="isShowModalSummaryReport" v-bind:width="300" class="modal-component-teacher-print">
    <div slot="close"><span></span></div>
    <div slot="header">
        <div class="block-heading">
            <h1 class="block-heading-item is-active">Summary Report Print</h1>
        </div>
    </div>
    <div slot="body" class="u-m-t-20">
        <div class="u-m-b-15">
            Click to generate a Summary Report. You can then download and print.
        </div>
        <div v-if="summaryReport.downloadUrl != ''" class="u-m-b-15">
            <a v-bind:href="summaryReport.downloadUrl" target="_blank" class="u-c-black"><u v-text="summaryReport.downloadText"></u></a>
        </div>
        <div class="u-text-center">
            <button v-on:click="generatePdfSummaryReport()" v-bind:disabled="summaryReport.btnCreateStatus">Create PDF</button>
            <button v-on:click="closeSummaryReport()">Close</button>
        </div>
    </div>
    <div slot="footer"></div>
</modal-component>