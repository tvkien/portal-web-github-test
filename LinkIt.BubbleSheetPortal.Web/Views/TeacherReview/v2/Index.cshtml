                                                                    select2: {
                                                                        minimumResultsForSearch: Infinity,
                                                                        width: '256',
                                                                        containerCssClass: 'assignment-select',
                                                                        dropdownCssClass: 'assignment-select-dropdown assignment-select-dropdown-not-found',
                                                                        placeholder: 'Select Item'
