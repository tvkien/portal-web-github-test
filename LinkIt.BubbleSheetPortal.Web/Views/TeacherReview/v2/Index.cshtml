<link href="@BundleHelper.Version("~/Content/css/v2/PassageDetail-v2.css")" rel="stylesheet" />
<style type="text/css">

    .scrollable {
        width: 100%;
    }

    .assignment-content {
        padding: 10px 0 0 0;
    }

    #portal-v2-containter .teacherReviewerV2 .block-reviewer-cancel .btn-assignment {
        padding-left: 30px;
    }

    .teacherReviewerV2 .btn-assignment.btn-arrow:after {
        left: 8px;
    }
</style>
<div class="teacherReviewerFullPage teacherReviewerV2">
    <article id="StudentPreferenceArticle" class="container_12">
        <section class="grid_12 box-shadow">
            <div class="block-border m-t-15" id="popup_content">
                <div class="block-content">
                    <h1>Assignment Reviewer</h1>
                    <div class="block-reviewer block-reviewer-cancel">
                        <label class="anonymized-label">Anonymized</label>
                        <a href="/TestAssignmentReview" class="big-button btn-assignment btn-arrow">Back to Assignment List</a>
                    </div>
                    <div class="block-reviewer block-reviewer-first mt-4">
                        <div class="assignment assignment-first u-clearfix">
                            <div class="assignment-form form">
                                <fieldset class="assignment-fieldset">
                                    <div class="assignment-content">
                                        <div class="header u-inline-block ">Test Info</div>
                                        <div class="u-inline-block u-w-400 u-text-right u-pull-right">
