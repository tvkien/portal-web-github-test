<style>
    .help-resource-list div:not(:first-child) {
        margin-left: 38px;
    }
</style>
<div class="block-border" id="divHelpResource">
    <div class="block-content form">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Help Resources</h1>
            <a href="javascript:void(0)" id="btnAddHelpResource" class="off btn btn-link p-0">
                Add help resource
                <i class="fa-solid fa-plus ms-2"></i>
            </a>
        </div>
        <div id="locationFieldset" class="mb-4">
            <div data-bind="foreach: HelpResourceTypes" class="help-resource-list d-flex align-items-center">
                <div class="d-flex align-items-center">
                    <img data-bind="attr: {src: ImgPath}" class="icon-32-custom me-2">
                    <strong data-bind="text: DisplayText"></strong>
                </div>
            </div>
        </div>
        <div class="">
            <table id="helpResourceDataTable" width="100%" class="datatable table table-assignment " url="@Url.Action("GetHelpResources", "HelpResource")">
                <thead>
                    <tr>
                        <th scope="col" class="black-cell actions">Actions</th>
                        <th scope="col" class="black-cell"></th>
                        <th scope="col" class="file-type">
                            <span class="column-sort">
                                <a href="javascript:void(0)" title="Sort Up" class="sort-up"></a>
                                <a href="javascript:void(0)" title="Sort Down" class="sort-down"></a>
                            </span>
                            File Type
                        </th>
                        <th scope="col" class="category">
                            <span class="column-sort">
                                <a href="javascript:void(0)" title="Sort Up" class="sort-up"></a>
                                <a href="javascript:void(0)" title="Sort Down" class="sort-down"></a>
                            </span>
                            Category
                        </th>
                        <th scope="col" class="topic">
                            <span class="column-sort">
                                <a href="javascript:void(0)" title="Sort Up" class="sort-up"></a>
                                <a href="javascript:void(0)" title="Sort Down" class="sort-down"></a>
                            </span>
                            Topic
                        </th>
                        <th scope="col">
                            <span class="column-sort">
                                <a href="javascript:void(0)" title="Sort Up" class="sort-up"></a>
                                <a href="javascript:void(0)" title="Sort Down" class="sort-down"></a>
                            </span>
                            Description
                        </th>
                        <th scope="col">
                            <span class="column-sort">
                                <a href="javascript:void(0)" title="Sort Up" class="sort-up"></a>
                                <a href="javascript:void(0)" title="Sort Down" class="sort-down"></a>
                            </span>
                            Updated
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="height: 60px;"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
