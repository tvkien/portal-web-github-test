<div id="notificationTimeout">
    <modal-component v-show="isShowModalTimeOutWarning" class="modal-timeout" v-bind:width="420" style="display: none; z-index: 2147483633">
        <div slot="close"></div>
        <div slot="header"></div>
        <div slot="body" class="u-text-center u-m-b-20 body-modal">
            <div class="modal--content" v-if="isSessionExpire">
                <p v-text="sessiongMsg"></p>
                <button type="button" name="btnClose" v-on:click="sessionKeepAlive()">Return to login</button>
            </div>
            <div class="modal--content" v-else>
                <p style="font-weight: 700; text-align: left;">
                    Your session will automatically expire in <span v-text="minutesForExpireFormat"></span>. To keep working, please click "Continue".
                </p>
                <button type="button" style="margin: 0" name="button" v-on:click="sessionKeepAlive()">Continue</button>
            </div>
        </div>
        <div slot="footer"></div>
    </modal-component>
</div>
