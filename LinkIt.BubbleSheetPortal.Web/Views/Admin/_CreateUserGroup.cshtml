@model LinkIt.BubbleSheetPortal.Models.CreateUserGroupDto

<section class="grid-12">
    <div class="block-border">
        <div class="block-content form">
            <h1>Create User Group</h1>
            <ul style="display: none" id="error-messages-add-user-school" class="no-margin message error"></ul>
            @using (Html.BeginForm("CreateXLIGroup", "UserGroupManagement", FormMethod.Post, new { id = "createUserGroupForm", @class = "form" }))
            {
                <fieldset>
                    @Html.HiddenFor(x => x.DistrictID, new { id = "hdfDistrictId" })
                    <p>
                        <label>Name</label>
                        <span class="relative">
                            @Html.TextBoxFor(m => m.Name, new { @class = "full-width" })
                        </span>
                    </p>
                    <p>
                        @Html.CheckBoxFor(x => x.InheritRoleFunctionality) Inherit User's Role Functionality
                    </p>
                </fieldset>

                <button id="btnAddSchoolSubmit" type="button" name="Save">Submit</button>
                <button id="btnAddSchoolCancel" type="button" class="grey">Cancel</button>
            }
        </div>
    </div>
</section>
