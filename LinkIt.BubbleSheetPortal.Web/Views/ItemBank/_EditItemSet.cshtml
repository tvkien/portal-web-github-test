@using LinkIt.BubbleSheetPortal.Common
@model LinkIt.BubbleSheetPortal.Models.QtiGroup

<style>
    .left-col { width: 110px; float: left}
    .right-col { width: 275px; float: left}
</style>

<section>
    <div class="block-border">
        <div class="block-content">
            <h1>Edit Item Set</h1>
            <ul style="display: none" id="error-messages" class="message error"></ul>
            <ul style="display: none" id="success-message" class="message success">
                <li>Item Set is updated successfully.</li>
            </ul>
            <div class="u-text-left form u-m-t-15">
                <div class="u-clearfix">
                    <div class="left-col u-m-t-10">Item Set Name:</div>
                    <div class="right-col">@Html.TextBoxFor(o => o.Name, new { style = "width: 250px;" })</div>
                </div>
                <div class="u-clearfix u-m-t-15">
                    <div class="left-col">Created by:</div>
                    <div class="right-col">@ViewBag.OriginalAuthor</div>
                </div>
                <div class="u-clearfix u-m-t-15">
                    <span class="left-col">Created date:</span>
                    <span class="right-col">@Model.CreatedDate.DisplayDateWithFormat(true)</span>
                </div>
                <div class="u-clearfix u-m-t-15">
                    <span class="left-col">Updated date:</span>
                    <span class="right-col">@Model.ModifiedDate.DisplayDateWithFormat(true)</span>
                </div>
                @Html.HiddenFor(o => o.QtiGroupId)
            </div>
            <div class="u-text-center u-m-t-15">
                <button type="button" id="btnSaveItemSet" onclick="saveItemSet()">Save</button>
                <button type="button" id="btnCancelChangeItemSet" onclick="cancelChange()">Cancel</button>
            </div>
        </div>
    </div>
</section>
