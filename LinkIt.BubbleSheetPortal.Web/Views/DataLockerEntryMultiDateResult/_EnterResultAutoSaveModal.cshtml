<modal-component 
    v-bind:show.sync="isShowModalWarning" 
    v-bind:width="460" 
    class="modal-component-studententry is-dark" 
    style="display: none;">
    <div slot="close"></div>
    <div slot="header"></div>
       <div slot="body">
        <div class="studententry-modal">
            <p>There is a draft version that saved automatically from your last update.
               Do you want to continue working on it?</p>
            <div class="u-text-center">
                <button v-on:click="loadDataFromAutoSave(true)">Yes</button>
                <button v-on:click="loadDataFromAutoSave(false)">No</button>
            </div>
        </div>
    </div>
    <div slot="footer"></div>
</modal-component>