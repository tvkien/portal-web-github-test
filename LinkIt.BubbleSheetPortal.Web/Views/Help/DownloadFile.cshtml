@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Download File</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="robots" content="none">
    <!-- Global stylesheets -->
    <link href="/Content/themes/Constellation/css/reset.css" rel="stylesheet" type="text/css">
    <link href="/Content/themes/Constellation/css/common.css" rel="stylesheet" type="text/css">
    <link href="/Content/themes/Constellation/css/form.css" rel="stylesheet" type="text/css">
    <link href="/Content/themes/Constellation/css/standard.css" rel="stylesheet" type="text/css">
    <link href="/Content/themes/Constellation/css/special-pages.css" rel="stylesheet"
        type="text/css">
    <!-- Custom styles -->
    <link href="/Content/themes/Constellation/css/simple-lists.css" rel="stylesheet"
        type="text/css">
    <!-- Favicon -->
    @Html.Partial("_Favicons")
    <!-- Generic libs -->
    <script type="text/javascript" src="/Content/themes/Constellation/js/html5.js"></script>
    <!-- this has to be loaded before anything else -->
    @LinkIt.BubbleSheetPortal.Web.Helpers.BundleHelper.jQueryUpgrade()
    <script type="text/javascript">

        $(document).ready(function () {
            $('#frmDownload').submit();
        });

    </script>
</head>
<!-- the 'special-page' class is only an identifier for scripts -->
<body class="special-page error-bg red dark">
    @using (Html.BeginForm("DownloadFile", "Help", new { id = ViewBag.WhatNewLinkDownload }, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmDownload" }))
    { }
</body>
</html>
