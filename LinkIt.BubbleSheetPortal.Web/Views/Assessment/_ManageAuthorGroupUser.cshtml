@model int
<link href="@Url.Content("~/Content/themes/base/jquery.ui.dialog.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/css/dialog-draggable.css")" rel="stylesheet" type="text/css" />

<div id ="listUserDiv" />
<div id ="addUserDiv" />

<script type="text/javascript">
    $(function () {
        init();
    });

    function init() {
        displayAuthorGroupUser(@Model);
    }

    function displayAuthorGroupUser(authorGroupId) {
        var jqListDiv = $('#listUserDiv');
        jqListDiv.empty();

        var param = { authorGroupId: authorGroupId };

        jqListDiv.load('@Url.Action("LoadListAuthorGroupUser")', param, function (response) {
                if (response == false) {
                    alert("Error happen. Please refresh page.");
                }
            });
    }
    
    function closeAddAuthorGroupUser(){
        $('#addUserDiv').hide();
        $('#listUserDiv').show();
        ui.dataTableAuthorGroupUser.fnDraw();
    }
</script>