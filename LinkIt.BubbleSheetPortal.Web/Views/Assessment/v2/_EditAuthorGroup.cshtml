@model LinkIt.BubbleSheetPortal.Models.AuthorGroup
<section style='z-index: 2004' class="mb-0">
    <div class='block-border' style='z-index: 2004'>
        <div class='block-content' style='z-index: 1004; padding: 0 !important'>
            <div style="padding: 24px">
                <p style="padding: 0; font-size: 22px" class="mb-4 title-large">Edit Author Group</p>
                <ul style="display: none" id="error-messages-author-group" class="message error"></ul>
                <ul style="display: none" id="success-message-author-group" class="message success">
                    <li>Author Group is updated successfully.</li>
                </ul>
                <p style='z-index: 1004; font-size: 14px; margin-bottom: 7px'>
                    Name
                    @Html.HiddenFor(o => o.Id)
                </p>
                <div class="input-wrapper">
                    @Html.TextBoxFor(o => o.Name, new { style = "width: 250px;" })
                </div>
            </div>   
            <div class="btn-container">
                <button id="btnCancelAuthorGroup" onclick="closeDialog()" class="cancel-btn">Cancel</button>
                <button type="button" id="btnSaveAuthorGroup" onclick="saveAuthorGroup()" class="red-btn">Save</button>
            </div>
        </div>
    </div>
</section>

<style>
    .btn-container {
        background: var(--navyColor);
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: space-around;
    }

    .input-wrapper input {
        width: 100% !important;
        border: 2px solid var(--selectBorder) !important;
        height: 48px;
        padding-left: 15px;
    }

    .red-btn {
        background-color: var(--red) !important;
        font-weight: 900;
        padding: 11px 32px;
        color: var(--white) !important;
    }

    .cancel-btn {
        font-weight: 900;
        padding: 11px 32px;
        color: var(--white) !important;
        cursor: pointer;
        text-decoration: none;
    }

    .red-btn:hover {
        background-color: var(--red2) !important;
    }
</style>

<script>
    function closeDialog() {
        $(".dialog").dialog("close");
    }
</script>
