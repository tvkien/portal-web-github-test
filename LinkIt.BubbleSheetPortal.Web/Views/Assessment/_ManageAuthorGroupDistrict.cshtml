@model int
<link href="@Url.Content("~/Content/themes/base/jquery.ui.dialog.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/css/dialog-draggable.css")" rel="stylesheet" type="text/css" />

<div id ="listDistrictDiv" />
<div id ="addDistrictDiv" />

<script type="text/javascript">
    $(function () {
        init();
    });

    function init() {
        displayAuthorGroupDistrict(@Model);
    }

    function displayAuthorGroupDistrict(authorGroupId) {
        var jqListDiv = $('#listDistrictDiv');
        jqListDiv.empty();

        var param = { authorGroupId: authorGroupId };

        jqListDiv.load('@Url.Action("LoadListAuthorGroupDistrict")', param, function (response) {
                if (response == false) {
                    alert("Error happen. Please refresh page.");
                }
            });
    }
    
    function closeAddAuthorGroupDistrict() {
        $('#addDistrictDiv').hide();
        $('#listDistrictDiv').show();
        ui.dataTableAuthorGroupDistrict.fnDraw();
    }
</script>