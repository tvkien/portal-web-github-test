@model int
<link href="@Url.Content("~/Content/themes/base/jquery.ui.dialog.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/css/dialog-draggable.css")" rel="stylesheet" type="text/css" />

<div id ="listSchoolDiv" />
<div id ="addSchoolDiv" />

<script type="text/javascript">
    $(function () {
        init();
    });

    function init() {
        displayAuthorGroupSchool(@Model);
    }

    function displayAuthorGroupSchool(authorGroupId) {
        var jqListDiv = $('#listSchoolDiv');
        jqListDiv.empty();

        var param = { authorGroupId: authorGroupId };

        jqListDiv.load('@Url.Action("LoadListAuthorGroupSchool")', param, function (response) {
                if (response == false) {
                    alert("Error happen. Please refresh page.");
                }
            });
    }
    
    function closeAddAuthorGroupSchool() {
        $('#addSchoolDiv').hide();
        $('#listSchoolDiv').show();
        ui.dataTableAuthorGroupSchool.fnDraw();
    }
</script>